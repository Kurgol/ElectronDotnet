@section modals{
    <div class="modal" id="addCountryModal" role="dialog" data-backdrop="static" data-keyboard="true" style="">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <i class="fa fa-times-circle-o"></i> </button>
                    <h4 class="modal-title"><span class="f-w-700">Overtime Rules Details</span><br><span class="f-s-13" id="mdlEmployeeTitle"></span></h4>
                </div>
                <div class="form-horizontal">
                    <form data-parsley-validate="true" class="all-forms" id="formEmployee" data-request-url="" novalidate="">
                        <div class="tab-content">
                            <div class="tab-pane fade active in" id="personal-tab">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label class="control-label LBL-FN-TA">Name</label><b class="text-danger">&nbsp;*</b>
                                        <input id="txtFName" name="txtFName" type="text" class="form-control input-sm" data-parsley-trigger="focusout" data-parsley-pattern="^(?:[A-Za-z]+[ -])*[A-Za-z]+$" required="">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="control-label LBL-LN">Country</label><b class="text-danger">&nbsp;*</b>
                                        <select id="selCountryCurrency" name="selCountryCurrency" class="form-control input-sm" required="" data-parsley-trigger="change"><option value="-1" disabled="" selected="">Select Country</option></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label class="control-label">Qualification Type</label><b class="text-danger">&nbsp;*</b>
                                        <select id="selCountryCurrency" name="selCountryCurrency" class="form-control input-sm" required="" data-parsley-trigger="change"><option value="-1" disabled="" selected="">Select Qualification Type</option></select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="control-label">Qualification Amount</label><b class="text-danger">&nbsp;*</b>
                                        <input id="txtFName" name="txtFName" type="text" class="form-control input-sm" data-parsley-trigger="focusout" data-parsley-pattern="^(?:[A-Za-z]+[ -])*[A-Za-z]+$" required="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label class="control-label">Tax Rate</label><b class="text-danger">&nbsp;*</b>
                                        <input id="txtFName" name="txtFName" type="text" class="form-control input-sm" data-parsley-trigger="focusout" data-parsley-pattern="^(?:[A-Za-z]+[ -])*[A-Za-z]+$" required="">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="control-label">Ceiling Type</label><b class="text-danger">&nbsp;*</b>
                                        <select id="selCountryCurrency" name="selCountryCurrency" class="form-control input-sm" required="" data-parsley-trigger="change"><option value="-1" disabled="" selected="">Select Status</option></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label class="control-label">Ceiling Overtime</label><b class="text-danger">&nbsp;*</b>
                                        <input id="txtFName" name="txtFName" type="text" class="form-control input-sm" data-parsley-trigger="focusout" data-parsley-pattern="^(?:[A-Za-z]+[ -])*[A-Za-z]+$" required="">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="control-label">Status</label><b class="text-danger">&nbsp;*</b>
                                        <select id="selCountryCurrency" name="selCountryCurrency" class="form-control input-sm" required="" data-parsley-trigger="change"><option value="-1" disabled="" selected="">Select Status</option></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label class="control-label">Notes</label><b class="text-danger">&nbsp;*</b>
                                        <textarea id="txtFName" name="txtFName" type="text" class="form-control input-sm" data-parsley-trigger="focusout" data-parsley-pattern="^(?:[A-Za-z]+[ -])*[A-Za-z]+$" required=""></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="col-md-4 text-left">
                        <button class="btn btn-white btn-sm" id="btnprev"></button>
                        <button class="btn btn-white btn-sm" id="btnnext"></button>
                    </div>
                    <div class=" col-md-8 text-right">
                        <button class="btn btn-success btn-sm" id="btnSave" data-request-url="" disabled="">Save</button>
                        <button type="reset" class="btn btn-link text-danger btn-sm" id="clearAllModal">Clear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
