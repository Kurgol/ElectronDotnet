@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "CountrySetup";
}

@{
    <!-- ================== BEGIN PAGE LEVEL STYLE ================== -->
    <link href="~/plugins/DataTables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/plugins/DataTables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <!-- ================== END PAGE LEVEL STYLE ================== -->

    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/plugins/pace/pace.min.js"></script>
    <!-- ================== END BASE JS ================== -->
}

<!-- begin #content -->
    <div id="content" class="content">
        <!-- begin breadcrumb -->
        <ol class="breadcrumb pull-right">
            <li><a href="javascript:;">Setup</a></li>
            <li class="active">Country Setup</li>
        </ol>
        <!-- end breadcrumb -->
        <!-- begin page-header -->
        <h1 class="page-header">Country Setup <small>..</small></h1>
        <!-- end page-header -->

        <div class="row">
            <!-- begin col-12 -->
            <div class="col-md-12">
                <!-- begin panel -->
                <div class="panel panel-inverse">
                    <div class="panel-heading">
                        <div class="panel-heading-btn">
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                        </div>
                        <h4 class="panel-title">Country Setup</h4>
                    </div>
                    <div class="well bg-silver-lighter no-rounded-corner">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control" placeholder="Search for an currency" id="search_term" />
                                    <div class="input-group-btn">
                                        <button disabled class="btn btn-white" id="btnSearch"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <button class="btn btn-success pull-right" id="btnAddCountry"><i class="fa fa-plus"></i> &nbsp;Add</button>
                            </div>
                        </div>
                    </div>
                    <table id="country-table" class="table table-striped table-bordered"></table>
                </div>
                <!-- end panel -->
            </div>
            <!-- end col-10 -->
        </div>
    </div>
<!-- end #content -->

@section modals{
    <div class="modal" id="addCountryModal" role="dialog" data-backdrop="static" data-keyboard="true" style="">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <i class="fa fa-times-circle-o"></i> </button>
                    <h4 class="modal-title"><span class="f-w-700">Country Details</span><br><span class="f-s-13" id="mdlCountryTitle"></span></h4>
                </div>
                <div class="form-horizontal">
                    <form data-parsley-validate="true" class="all-forms" id="formCountry" data-request-url="" novalidate="">
                        <div class="tab-content">
                            <div class="tab-pane fade active in" id="country-tab">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label class="control-label LBL-FN-TA">Name</label><b class="text-danger">&nbsp;*</b>
                                        <input id="inTxtCountryName" name="inTxtCountryName" type="text" class="form-control input-sm" data-parsley-trigger="focusout" required="">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="control-label LBL-LN">Currency</label><b class="text-danger">&nbsp;*</b>
                                        <select id="selCountryCurrency" name="selCountryCurrency" class="form-control input-sm" required="" data-parsley-trigger="change">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label class="control-label">Code</label><b class="text-danger">&nbsp;*</b>
                                        <input id="inTxtCountryCode" name="inTxtCountryCode" type="text" class="form-control input-sm" required="" data-parsley-trigger="focusout">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="control-label LBL-LN">Status</label><b class="text-danger">&nbsp;*</b>
                                        <select id="selCountryStatus" name="selCountryStatus" class="form-control input-sm" required="" data-parsley-trigger="change">
                                            <option value="-1" disabled="" selected="">Select Status</option>
                                            <option value="1">Active</option>
                                            <option value="0">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="col-md-4 text-left">
                        <button class="btn btn-white btn-sm dont-show" id="btnprev"></button>
                        <button class="btn btn-white btn-sm dont-show" id="btnnext"></button>
                    </div>
                    <div class=" col-md-8 text-right">
                        <button class="btn btn-success btn-sm" id="btnSave" data-request-url="" disabled="">Save</button>
                        <button type="button" class="btn btn-link text-danger btn-sm" id="clearAllModal">Clear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

